<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/paddingGeneral"
    tools:context=".MainActivity">

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/numero_1_txt"
    android:textSize="@dimen/tamanioLetra"
    ></TextView>

    <EditText
        android:id="@+id/n1_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:layout_marginTop="@dimen/topTxt"
        android:hint="@string/numero_1_txt"
        ></EditText>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/numero_2_txt"
        android:textSize="@dimen/tamanioLetra"
        android:layout_marginTop="@dimen/topTxt"/>

    <EditText
        android:id="@+id/n2_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="@string/numero_2_txt">
    </EditText>

<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/topTxt">
    <Button
        android:id="@+id/sumar_btn"
        android:text="+"
        android:onClick="sumar"
        android:textSize="@dimen/tamanioLetra"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:minHeight="@dimen/altoBoton">
        </Button>
    <Button
        android:id="@+id/restar_btn"
        android:text="-"
        android:onClick="restar"
        android:textSize="@dimen/tamanioLetra"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:minHeight="@dimen/altoBoton">
    </Button>
</LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/dividir_btn"
            android:onClick="dividir"
            android:text="/"
            android:textSize="@dimen/tamanioLetra"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:minHeight="@dimen/altoBoton">
        </Button>
        <Button
            android:id="@+id/multiplicar_btn"
            android:text="*"
            android:onClick="multiplicar"
            android:textSize="@dimen/tamanioLetra"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:minHeight="@dimen/altoBoton">
        </Button>
    </LinearLayout>
</LinearLayout>


